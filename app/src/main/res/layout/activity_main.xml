<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu"
    tools:context="com.nankai.fpicomsg.MainActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_height"
        android:background="@color/menu"
        android:theme="@style/AlertDialog.AppCompat.Light">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/back_icon_height"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_0_4dp"
            android:src="@drawable/hover_back" />

        <com.nankai.fpicomsg.customview.FontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_4_medium_16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"></RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0_4dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/shadow_top" />
</RelativeLayout>
