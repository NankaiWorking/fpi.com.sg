<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_menu"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:paddingTop="@dimen/spacing_1_8dp"></android.support.v4.view.ViewPager>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0_4dp"
        android:layout_above="@+id/tab_menu"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/shadow_bot" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/menu"></android.support.design.widget.TabLayout>
</RelativeLayout>